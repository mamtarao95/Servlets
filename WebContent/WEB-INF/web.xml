<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>LoginApplication</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.bridgelabz.loginapplication.controllers.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/logservlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>registration</servlet-name>
    <servlet-class>com.bridgelabz.loginapplication.controllers.RegistrationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>registration</servlet-name>
    <url-pattern>/regservlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>logoutservlet</servlet-name>
    <servlet-class>com.bridgelabz.loginapplication.controllers.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logoutservlet</servlet-name>
    <url-pattern>/LogoutServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>PreRegisterservlet</servlet-name>
    <servlet-class>com.bridgelabz.loginapplication.controllers.PreRegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PreRegisterservlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  
  <filter>
    <filter-name>RegisterFilter</filter-name>
    <filter-class>com.bridgelabz.loginapplication.controllers.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>RegisterFilter</filter-name>
    <url-pattern>/regservlet</url-pattern>
  </filter-mapping>
</web-app>